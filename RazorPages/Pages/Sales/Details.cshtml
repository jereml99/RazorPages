@page
@model RazorPages.Pages.Sales.DetailsModel

<div>
    <h4>Sales</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sales.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sales.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sales.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sales.Date)
        </dd>
        @foreach (var item in Model.SalesList.Where(item => item.Amount > 0))
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.ProductName)
                Amount:
                @Html.DisplayFor(modelItem => item.Amount)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-Id="@Model.Sales.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
