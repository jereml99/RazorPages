@page
@model RazorPages.Pages.Products.DetailsModel

<div>
	<h4>Product</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product.Type)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.Type)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product.Producer)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.Producer.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product.PH)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.PH)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product.Mineralization)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.Mineralization)
		</dd>
		<dt class="col-sm-2">
			Cations list:
		</dt>
		<dd class="col-sm-10">
		@foreach (var item in Model.Cations)
		{
			<br/>
				@Html.DisplayFor(modelItem => item.Name)
		}
		</dd>
		<dt class="col-sm-2">
			Anions list:
		</dt>
		<dd class="col-sm-10">
			@foreach (var item in Model.Anions)
			{
					<br/>
				@Html.DisplayFor(modelItem => item.Name)
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product.PackingType)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.PackingType)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product.Volume)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.Volume)
		</dd>

		<dd class="col-sm-10">
            <img src="data:image/jpg;base64,@Model.Product.ImageData" width="100px" height="100px" alt="image"/>
        </dd>
	</dl>
</div>
<div>
	<a asp-page="./Edit" asp-route-Id="@Model.Product.Id">Edit</a> 
	<a asp-page="./Index">Back to List</a>
</div>
