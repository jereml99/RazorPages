@model RazorPages.Pages.Delivery.DetailsModel

<div>
    <h4>Delivery</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Worker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Worker)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Pallets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Pallets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Data)
        </dd>
        @foreach (var item in Model.Orders.Where(item => item.Amount > 0))
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.ProductName)
                Amount:
                @Html.DisplayFor(modelItem => item.Amount)
            </dd>
        }

    </dl>
</div>
